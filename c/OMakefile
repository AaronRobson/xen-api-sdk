API_MAJOR=2
API_MINOR=7

section
  OCamlProgram(gen_c_binding, gen_c_binding helper ../licence ../CommonFunctions)

.PHONY: dist
dist: gen_c_binding
  rm -Rf autogen
  mkdir -p autogen/include 
  mkdir -p autogen/src
  mkdir -p autogen/test
  ./gen_c_binding -d autogen
  #source
  (cd autogen && patch -p0 < compat.patch)
  rm autogen/*.orig
  mv autogen/xen autogen/include
  mv autogen/*.h autogen/include
  mv autogen/*.c autogen/src
  cp xen_internal.h autogen/include
  cp xen_common.h xen_string_set.h xen_int_set.h autogen/include/xen/api
  cp xen_common.c xen_string_set.c xen_int_set.c autogen/src
  sed -e s/@LIB_MAJOR@/$(API_MAJOR)/g -e s/@LIB_MINOR@/$(API_MINOR)/g Makefile.dist > autogen/Makefile  
  make -C autogen -f Makefile ueberheader
  #tests
  cp test/*.c autogen/test 
  #other
  sed -e 's/@SDK_VERSION@/$(SDK_VERSION)/g' README.dist > autogen/README
  cp ../LICENSE autogen/COPYING

.PHONY: clean
clean:
  rm -f $(CLEAN_OBJS) gen_c_binding
  rm -rf autogen
