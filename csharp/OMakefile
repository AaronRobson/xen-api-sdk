SR_XML = $(PROJECT_OUTPUTDIR)/sm/XE_SR_ERRORCODES.xml

OCamlProgram(gen_csharp_binding, gen_csharp_binding ../friendly_error_names ../licence ../CommonFunctions)

.PHONY: dist
dist: gen_csharp_binding $(SR_XML)
  rm -rf autogen
  mkdir -p autogen/src/Properties
  mkdir -p autogen/gui
  mkdir -p autogen/samples
  ./gen_csharp_binding -s $(SR_XML) -d autogen
  #source
  mv autogen/XenObjectDownloader.cs autogen/gui 
  sh subst-autogen-csproj.sh autogen src/XenServer.csproj autogen/src/XenServer.csproj
  cp src/*.cs autogen
  cp autogen/*.* autogen/src
  mv autogen/src/AssemblyInfo.cs autogen/src/Properties/AssemblyInfo.cs
  sed -i -e 's/1\.0\.0\.0/$(SDK_VERSION).0/g' autogen/src/Properties/AssemblyInfo.cs
  #source gui
  mv autogen/*.* autogen/gui
  rm autogen/gui/AssemblyInfo.cs
  #samples
  cp samples/XenSdkSample.sln autogen/samples
  foreach(example, GetVariousRecords GetVmRecords VmPowerStates)
    mkdir -p autogen/samples/$(example)/Properties
    cp samples/$(example)/Properties/AssemblyInfo.cs autogen/samples/$(example)/Properties
    cp samples/$(example)/$(example).csproj autogen/samples/$(example)
    cp samples/$(example)/Program.cs        autogen/samples/$(example)
  #other  
  sed -e 's/@SDK_VERSION@/$(SDK_VERSION)/g' README.dist > autogen/README.txt
  cp ../LICENSE autogen
  sh ../windows-line-endings.sh autogen
  cp csharp.sh ../sign.bat autogen

.PHONY: clean
clean:
  rm -f $(CLEAN_OBJS) gen_csharp_binding
  rm -rf autogen
