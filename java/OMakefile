OCamlProgram(main, main ../licence ../CommonFunctions)

.PHONY: dist
dist: main
  rm -rf autogen
  mkdir -p autogen/com/xensource/xenapi
  mkdir -p autogen/samples
  ./main autogen
  #source
  cp lib/com/xensource/xenapi/*.java autogen/com/xensource/xenapi
  sed -e 's/@SDK_VERSION@/$(SDK_VERSION)/g' lib/com/xensource/xenapi/Connection.java > autogen/com/xensource/xenapi/Connection.java
  #samples
  cp samples/*.java autogen/samples
  #other
  sed -e 's/@SDK_VERSION@/$(SDK_VERSION)/g' lib/Makefile.dist > autogen/Makefile
  sed -e 's/@SDK_VERSION@/$(SDK_VERSION)/g' README.dist > autogen/README.txt
  cp ../LICENSE autogen/LICENSE.txt
  cp LICENSE.Apache-2.0.txt autogen

.PHONY: clean
clean:
  rm -f $(CLEAN_OBJS) main
  rm -rf autogen
